package com.erdal.service;

import java.util.HashMap;
import java.util.Map;

import org.springframework.stereotype.Service;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;

import com.erdal.domain.Order;
import com.erdal.repository.OrderRepository;

import lombok.RequiredArgsConstructor;

@Service
@RequiredArgsConstructor
public class OrderService<Srting> {
	
	private final OrderRepository orderRepository;
	
	@PostMapping("/save-order")
	public Map<String, Order> saveOrder(@RequestBody Order order) {

	    Order ord = orderRepository.save(order);

	    Map<String, Order> map = new HashMap<>();
	    map.put("orders success", ord);

	    return map;
	
}

}
